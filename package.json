{
    "scripts": {
        "start-kafka-broker": "docker-compose -f ./docker-composition/docker-compose-kafka.yml up",
        "start-persistence": "docker-compose -f ./docker-composition/docker-compose-persistence.yml up",
        "start-service-api-gateway": "cd ./services/apiGateway && yarn install && APP_PORT=8900 node index",
        "start-service-inventory": "cd ./services/inventory && yarn install && APP_PORT=8901 node index",
        "start-service-order": "cd ./services/order && yarn install && APP_PORT=8902 node index",
        "lint": "npx eslint . --ext .js --fix",
        "post-order-1": "cd ./services/apiGateway/routes/order && curl -H \"Content-Type: application/json\" -d @order1.json -vPOST http://0.0.0.0:8900/order",
        "post-order-2": "cd ./services/apiGateway/routes/order && curl -H \"Content-Type: application/json\" -d @order2.json -vPOST http://0.0.0.0:8900/order",
        "seed-inventory": "curl -XPOST http://0.0.0.0:8901/automation-testing/seed",
        "drop-inventory": "curl -XDELETE http://0.0.0.0:8901/automation-testing/all"
    },
    "devDependencies": {
        "eslint": "^5.12.1",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0"
    },
    "standard": {
        "env": [ "jest" ]
      }
}
